
#!/bin/bash

# Install Nginx
apt-get update
apt-get install -y nginx

# Configure Nginx
echo "server {
    listen 80;
    root /var/www/html;
    index index.html;
    location / {
        try_files \$uri \$uri/ =404;
    }
}" > /etc/nginx/sites-available/default

# Create web page
echo "Hello World!" > /var/www/html/index.html

# Restart Nginx
service nginx restart
