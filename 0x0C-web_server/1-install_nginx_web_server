#!/bin/bash

# Update the package index
apt-get update

# Install Nginx
apt-get install -y nginx

# Start Nginx
service nginx start

# Configure Nginx to listen on port 80 and return "Hello World!"
echo "Hello World!" > /var/www/html/index.html
echo "server {
    listen 80;
    location / {
        root /var/www/html;
    }
}" > /etc/nginx/sites-available/default

# Restart Nginx
service nginx reload
